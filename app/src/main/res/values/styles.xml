<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#ff0099cc</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>


    <style name="AppTheme.Launcher">
        <!--关闭启动窗口-->
        <item name="android:windowDisablePreview">true</item>

    </style>
    <style name="MyTabLayoutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyTabLayoutTextAppearanceInverse" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/color1</item>
    </style>

</resources>
