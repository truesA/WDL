<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground">

    <com.wdl.amdroid_jwdl.view.searchView.SearchView
        android:id="@+id/search_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:searchBlockColor="#ffffffff"
        app:searchBlockHeight="150"
        app:textColorSearch="#ff9b9b9b"
        app:textHintSearch="输入车牌号 如京"
        app:textSizeSearch="5.0dip" />

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="fill_parent"
        android:layout_height="500.0dip"
        android:layout_below="@+id/search_view"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/search_view"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            android:background="@drawable/edit_wilter_c5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_carPai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京A-888888"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:gravity="left"
                android:text="刘浩明"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/search_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\ 123456788"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_level"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="T1" />

                <TextView
                    android:id="@+id/search_xinyong"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="优秀830" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_xu"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="续3" />

                <TextView
                    android:id="@+id/search_zhe"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="折0.8" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_word"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50.0dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:src="@drawable/new_word_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="新建文档" />
    </LinearLayout>
</RelativeLayout>