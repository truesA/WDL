<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <View
            android:id="@+id/view_status"
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:background="@color/text_color05" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:layout_centerInParent="true"
                android:background="@color/text_color05"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/rg_top"
                    android:layout_width="150.0dip"
                    android:layout_height="35.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="10.0dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_top_c"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/rb_bg_01"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingBottom="6.0dip"
                        android:paddingTop="6.0dip"
                        android:text="产值"
                        android:textColor="@color/title_text_sel"
                        android:textSize="16.0sp" />

                    <RadioButton
                        android:id="@+id/rb_top_t"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/rb_bg_02"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="6.0dip"
                        android:paddingTop="6.0dip"
                        android:text="台次"
                        android:textColor="@color/title_text_sel"
                        android:textSize="16.0sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/time_selsect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15.0dip"
                android:text="1月"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size3" />
        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/data_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePreviewInEditMode="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/data_line_chart"
                            android:layout_width="fill_parent"
                            android:layout_height="200.0dip"
                            android:layout_margin="10.0dip"
                            android:background="@drawable/edit_wilter_c5" />

                        <LinearLayout
                            android:id="@+id/ll_chanZ"
                            android:layout_width="fill_parent"
                            android:layout_height="80.0dip"
                            android:layout_margin="10.0dip"
                            android:background="@drawable/edit_wilter_c5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="目标达成率"
                                    android:textSize="@dimen/text_size4" />

                                <TextView
                                    android:id="@+id/chanZ_mubv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:textColor="@color/color1"
                                    android:textSize="@dimen/text_size1"
                                    tools:text="56%" />
                            </LinearLayout>

                            <View
                                android:layout_width="1.0dip"
                                android:layout_height="20.0dip"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="平日"
                                    android:textSize="@dimen/text_size4" />

                                <TextView
                                    android:id="@+id/chanZ_today"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:textColor="@color/color1"
                                    android:textSize="@dimen/text_size1"
                                    tools:text="9786" />
                            </LinearLayout>

                            <View
                                android:layout_width="1.0dip"
                                android:layout_height="20.0dip"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="周末"
                                    android:textSize="@dimen/text_size4" />

                                <TextView
                                    android:id="@+id/chanZ_sunday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:textColor="@color/color1"
                                    android:textSize="@dimen/text_size1"
                                    tools:text="14986" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_taiC"
                            android:layout_width="fill_parent"
                            android:layout_height="80.0dip"
                            android:layout_margin="10.0dip"
                            android:background="@drawable/edit_wilter_c5"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:id="@+id/taiC_m1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="M1"
                                    android:textSize="@dimen/text_size5" />

                                <TextView
                                    android:id="@+id/taiC_m2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="M2"
                                    android:textSize="@dimen/text_size5" />
                            </LinearLayout>

                            <View
                                android:layout_width="1.0dip"
                                android:layout_height="20.0dip"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:id="@+id/taiC_yuv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="预约率"
                                    android:textSize="@dimen/text_size5" />

                                <TextView
                                    android:id="@+id/taiC_mubv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="达成率"
                                    android:textSize="@dimen/text_size5" />
                            </LinearLayout>

                            <View
                                android:layout_width="1.0dip"
                                android:layout_height="20.0dip"
                                android:background="@color/black" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5.0dip"
                                android:paddingTop="5.0dip">

                                <TextView
                                    android:id="@+id/taiC_today"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="平日"
                                    android:textSize="@dimen/text_size5" />

                                <TextView
                                    android:id="@+id/taiC_sunday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="周末"
                                    android:textSize="@dimen/text_size5" />
                            </LinearLayout>
                        </LinearLayout>

                        <include layout="@layout/data_fg_progress_layout" />
                    </LinearLayout>
                </ScrollView>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>


</LinearLayout>