<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="40.0dip"
            android:background="@drawable/edit_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textSize="@dimen/text_size3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/edit_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/text_size3" />

            <ImageView
                android:id="@+id/et_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/close"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/et_password_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eye_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:text="忘记密码"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size3" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/login_bt_bg"
            android:text="登录"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:text="去注册"
            android:textColor="@color/main_hui"
            android:textSize="@dimen/text_size3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="第三方快捷登录"
            android:textColor="@color/main_hui"
            android:textSize="@dimen/text_size3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/qq_login" />

            <ImageView
                android:id="@+id/login_weixin"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/weixin_login" />

            <ImageView
                android:id="@+id/login_sina"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/sina_login" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>